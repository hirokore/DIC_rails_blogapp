<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td style="padding-left:20px;"><%= blog.content %></td>
    <td><%= link_to "詳細を確認する",blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する",edit_blog_path(blog.id), data: { confirm: 'え？まじでやるよ？？ええん？' } %></td>
    <td><%= link_to "ブログを削除する ", blog_path(blog.id), method: :delete, data: { confirm: 'え？まじで消すよ？？ええん？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくブログを投稿する', new_blog_path %>